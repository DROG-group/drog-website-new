    background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
    color: var(--white);
    border: none;
  }

  .generation-highlight h3 {
    color: var(--white);
  }

  .generation-highlight p {
    color: rgba(255, 255, 255, 0.9);
  }

  .generation-highlight .gen-badge {
    background: var(--white);
    color: var(--primary);
  }

  .generation-highlight .gen-year,
  .generation-highlight .detail-label {
    color: rgba(255, 255, 255, 0.7);
  }

  .generation-highlight .detail-value {
    color: var(--white);
  }

  .gen-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .gen-badge {
    background: var(--primary);
    color: var(--white);
