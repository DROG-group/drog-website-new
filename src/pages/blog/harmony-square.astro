    background: var(--gray-100);
    border-radius: 10px;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--primary);
    margin-bottom: 1rem;
  }

  .feature-card h4 {
    font-size: 1rem;
    font-weight: 600;
    color: var(--gray-900);
    margin-bottom: 0.5rem;
  }

  .feature-card p {
    font-size: 0.9rem !important;
    color: var(--gray-600);
    margin: 0;
    line-height: 1.6;
  }

  /* Play CTA */
  .play-cta {
    text-align: center;
    margin: 3rem 0;
  }

  .btn-lg {
    padding: 1rem 2rem;
    font-size: 1.125rem;
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
  }

  /* CTA */
  .post-cta {
    background: linear-gradient(135deg, var(--gray-900) 0%, var(--gray-800) 100%);
    color: var(--white);
    padding: 3rem;
    border-radius: 20px;
    text-align: center;
    margin-top: 4rem;
  }

  .post-cta h3 {
    color: var(--white);
    margin: 0 0 1rem;
    font-size: 1.5rem;
  }

  .post-cta p {
    color: var(--gray-400);
    margin-bottom: 2rem;
  }

  .cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn-outline {
    background: transparent;
    color: var(--white);
    border: 1px solid var(--gray-600);
  }

  .btn-outline:hover {
    border-color: var(--white);
    background: rgba(255, 255, 255, 0.1);
  }

  /* Related Posts */
  .related-posts {
    margin-top: 4rem;
    padding-top: 3rem;
    border-top: 1px solid var(--gray-200);
  }

  .related-posts h3 {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--gray-900);
    margin-bottom: 1.5rem;
  }

  .related-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
  }

  @media (max-width: 640px) {
    .related-grid {
      grid-template-columns: 1fr;
    }
  }

  .related-card {
    background: var(--gray-50);
    padding: 1.5rem;
    border-radius: 12px;
    transition: all 0.2s;
  }

  .related-card:hover {
    background: var(--white);
    box-shadow: var(--shadow-lg);
  }

  .related-category {
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--primary);
