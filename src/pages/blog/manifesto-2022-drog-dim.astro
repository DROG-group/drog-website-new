    padding-top: 3rem;
    border-top: 1px solid var(--gray-200);
  }

  .related-posts > h3 {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--gray-900);
    margin-bottom: 1.5rem;
  }

