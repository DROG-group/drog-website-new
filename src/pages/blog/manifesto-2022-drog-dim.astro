    display: flex;
    gap: 1.5rem;
    background: var(--gray-50);
    padding: 1.5rem;
    border-radius: 12px;
  }

  .insight-number {
    width: 48px;
    height: 48px;
    background: var(--primary);
    color: var(--white);
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 1.25rem;
    flex-shrink: 0;
  }

