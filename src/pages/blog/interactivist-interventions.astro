    margin-bottom: 0.5rem;
  }

  .principle-card p {
    font-size: 0.9rem !important;
    color: var(--gray-600);
    margin: 0;
    line-height: 1.6;
  }

  /* Approach List */
  .approach-list {
    list-style: none;
    padding: 0;
    margin: 2rem 0;
  }

  .approach-list li {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    padding: 1rem 0;
    border-bottom: 1px solid var(--gray-100);
    font-size: 1.1rem;
    color: var(--gray-700);
  }

  .approach-list li:last-child {
    border-bottom: none;
  }

  .list-icon {
    width: 28px;
    height: 28px;
    background: #10b981;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--white);
