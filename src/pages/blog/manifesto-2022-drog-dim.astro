    font-size: 0.875rem;
    color: var(--gray-500);
    font-family: var(--font-mono);
  }

  .gen-details {
    display: flex;
    gap: 2rem;
    margin-bottom: 1rem;
  }

  .gen-detail {
    display: flex;
    flex-direction: column;
  }

