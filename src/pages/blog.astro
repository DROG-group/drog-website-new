---
import Layout from '../layouts/Layout.astro';

const posts = [
  {
    title: "The Standard Disinformation Model: Understanding Content Pollution",
    description: "The field of counter-disinformation is cluttered with interventions, definitions, and approaches. To make sense of it all, we need to start with the basics: what actually is disinformation, and how do governments justify intervening against it?",
    category: "DIM",
    tags: ["definition", "framework", "theory", "pollution-model"],
    slug: "standard-disinformation-model"
  },
  {
    title: "Harmony Square",
    subtitle: "What is Harmony Square?",
    description: "Harmony Square is a game about fake news. The game's setting is the idyllic Harmony Square, a small neighborhood mildly obsessed with democracy. You, the player, are hired as Chief Disinformation Officer.",
    category: "Case Studies",
    tags: ["prebunking", "game", "inoculation"],
    slug: "harmony-square"
  },
  {
    title: "Manifesto 2022: a method to solve the definitional problem",
    description: "The DROG Disinformation Intervention Model (DROG DIM) categorizes interventions into five 'generations' based on paradigm shifts that have occurred in the field of counter-disinformation over the past decade.",
    category: "DIM",
    tags: ["dim", "theory", "framework"],
    slug: "manifesto-2022-drog-dim"
  },
  {
    title: "Explore the next generation of 'INTERACTIVISTS' interventions",
    description: "Your disinformation interventions must constantly deal with, and adapt to new circumstances, whilst taking on board scientific insights and field lab testing. Read more about these so-called 'Interactivist' 5th-generation interventions.",
    category: "Research",
    tags: ["gen-5", "interactivist", "interventions"],
    slug: "interactivist-interventions"
  }
];
---

<Layout title="Blog" description="Read up on our latest publications and learn about the DROG DIM model">
  <!-- Hero Section -->
  <section class="page-hero">
    <div class="container">
      <span class="section-label">Publications</span>
      <h1>Blog</h1>
      <p class="hero-subtitle">Read up on our latest publications. Learn all about our DIM model: a method to solve the definitional problem.</p>
    </div>
  </section>

  <!-- Blog Posts Section -->
  <section class="section">
    <div class="container">
      <!-- Filter Bar -->
      <div class="filter-bar">
        <button class="filter-btn active" data-filter="all">All</button>
        <button class="filter-btn" data-filter="case-studies">Case Studies</button>
        <button class="filter-btn" data-filter="research">Research</button>
        <button class="filter-btn" data-filter="dim">DIM Model</button>
      </div>

      <!-- Posts Grid -->
      <div class="posts-grid">
        {posts.map((post) => (
          <article class="post-card" data-category={post.category.toLowerCase().replace(' ', '-')}>
            <span class="post-category">{post.category}</span>
            <h2>{post.title}</h2>
            {post.subtitle && <h3 class="post-subtitle">{post.subtitle}</h3>}
            <p>{post.description}</p>
            <div class="post-tags">
              {post.tags.map((tag) => (
                <span class="tag">{tag}</span>
              ))}
            </div>
            <a href={`/blog/${post.slug}`} class="read-more">Read More &rarr;</a>
          </article>
        ))}
      </div>
    </div>
  </section>
</Layout>

<style>
  .page-hero {
    padding: 10rem 0 4rem;
    background: linear-gradient(135deg, var(--gray-50) 0%, var(--white) 100%);
    text-align: center;
  }

  .page-hero h1 {
    font-size: 3rem;
    font-weight: 700;
    color: var(--gray-900);
    margin-bottom: 1rem;
  }

  .hero-subtitle {
    font-size: 1.125rem;
    color: var(--gray-600);
    max-width: 600px;
    margin: 0 auto;
  }

  /* Filter Bar */
  .filter-bar {
    display: flex;
    gap: 0.75rem;
    margin-bottom: 3rem;
    flex-wrap: wrap;
  }

  .filter-btn {
    background: var(--gray-100);
    border: none;
    padding: 0.625rem 1.25rem;
    border-radius: 100px;
    font-size: 0.875rem;
    font-weight: 500;
    color: var(--gray-600);
    cursor: pointer;
    transition: all 0.2s;
  }

  .filter-btn:hover {
    background: var(--gray-200);
  }

  .filter-btn.active {
    background: var(--gray-900);
    color: var(--white);
  }

  /* Posts Grid */
  .posts-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 2rem;
  }

  @media (max-width: 768px) {
    .posts-grid {
      grid-template-columns: 1fr;
    }
  }

  .post-card {
    background: var(--white);
    border: 1px solid var(--gray-200);
    border-radius: 16px;
    padding: 2rem;
    transition: all 0.2s;
  }

  .post-card:hover {
    box-shadow: var(--shadow-lg);
    transform: translateY(-4px);
  }

  .post-category {
    display: inline-block;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--accent);
    background: rgba(37, 99, 235, 0.1);
    padding: 0.375rem 0.75rem;
    border-radius: 6px;
    margin-bottom: 1rem;
  }

  .post-card h2 {
    font-size: 1.375rem;
    font-weight: 600;
    color: var(--gray-900);
    margin-bottom: 0.5rem;
    line-height: 1.3;
  }

  .post-subtitle {
    font-size: 1rem;
    font-weight: 500;
    color: var(--accent);
    margin-bottom: 0.75rem;
  }

  .post-card p {
    color: var(--gray-600);
    line-height: 1.7;
    margin-bottom: 1.5rem;
  }

  .post-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    margin-bottom: 1.5rem;
  }

  .tag {
    font-size: 0.75rem;
    background: var(--gray-100);
    color: var(--gray-700);
    padding: 0.25rem 0.75rem;
    border-radius: 100px;
  }

  .read-more {
    font-size: 0.875rem;
    font-weight: 600;
    color: var(--gray-900);
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
    transition: color 0.2s;
  }

  .read-more:hover {
    color: var(--accent);
  }
</style>

<script>
  document.querySelectorAll('.filter-btn').forEach(btn => {
    btn.addEventListener('click', () => {
      const filter = btn.getAttribute('data-filter');
      document.querySelectorAll('.filter-btn').forEach(b => b.classList.remove('active'));
      btn.classList.add('active');

      document.querySelectorAll('.post-card').forEach(card => {
        const category = card.getAttribute('data-category');
        if (filter === 'all' || category === filter) {
          card.style.display = '';
        } else {
          card.style.display = 'none';
        }
      });
    });
  });
</script>
