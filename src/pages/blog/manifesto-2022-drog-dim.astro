    }
  }

  .related-card {
    background: var(--gray-50);
    padding: 1.5rem;
    border-radius: 12px;
    transition: all 0.2s;
  }

  .related-card:hover {
    background: var(--white);
    box-shadow: var(--shadow-lg);
  }

  .related-category {
    font-size: 0.75rem;
    font-weight: 600;
    color: var(--primary);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

