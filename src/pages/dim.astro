<script>
  document.addEventListener('DOMContentLoaded', () => {
    // Intersection Observer for timeline entries
    const timelineEntries = document.querySelectorAll('.timeline-entry');
    const timelineTrack = document.querySelector('.timeline-track');
    const timelineLine = document.querySelector('.timeline-line');

    // Observer options
    const observerOptions = {
      root: null,
      rootMargin: '-10% 0px -10% 0px',
      threshold: [0, 0.25, 0.5, 0.75, 1]
    };

    // Create observer for entry visibility
    const entryObserver = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting && entry.intersectionRatio > 0.25) {
          entry.target.classList.add('visible');
        }
      });
    }, observerOptions);

    // Observe all timeline entries
    timelineEntries.forEach(entry => {
      entryObserver.observe(entry);
    });

    // Timeline progress tracking
    const updateTimelineProgress = () => {
      if (!timelineTrack || !timelineLine) return;

      const trackRect = timelineTrack.getBoundingClientRect();
      const windowHeight = window.innerHeight;
      const trackTop = trackRect.top;
      const trackHeight = trackRect.height;

      // Calculate how much of the track is above the viewport center
      const scrollProgress = Math.max(0, Math.min(1,
        (windowHeight * 0.5 - trackTop) / trackHeight
      ));

      // Update CSS variable for line progress
      timelineLine.style.setProperty('--progress', `${scrollProgress * 100}%`);
    };

    // Scroll listener for timeline progress
    let ticking = false;
    window.addEventListener('scroll', () => {
      if (!ticking) {
        requestAnimationFrame(() => {
          updateTimelineProgress();
          ticking = false;
        });
        ticking = true;
      }
    });

    // Initial update
    updateTimelineProgress();

    // Smooth scroll indicator click
    const scrollIndicator = document.querySelector('.scroll-indicator');
    if (scrollIndicator) {
      scrollIndicator.style.cursor = 'pointer';
      scrollIndicator.addEventListener('click', () => {
        const firstEntry = timelineEntries[0];
        if (firstEntry) {
          firstEntry.scrollIntoView({ behavior: 'smooth', block: 'center' });
        }
      });
    }

    // Add parallax effect to timeline intro
    const timelineIntro = document.querySelector('.timeline-intro');
    if (timelineIntro) {
      window.addEventListener('scroll', () => {
        const scrolled = window.pageYOffset;
        const introRect = timelineIntro.getBoundingClientRect();
        if (introRect.bottom > 0 && introRect.top < window.innerHeight) {
          const parallaxValue = scrolled * 0.3;
          timelineIntro.style.backgroundPositionY = `${parallaxValue}px`;
        }
      });
    }
  });
</script>
